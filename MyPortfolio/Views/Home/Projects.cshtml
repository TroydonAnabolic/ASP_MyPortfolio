
@{
    ViewData["Title"] = "Projects";
}

@section SpecialOther{

    <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/js/projects.js"></script>
}

<h1>Projects</h1>

@*Slide is an alteration from the sample from W3 schools at: https://codepen.io/bcarvalho/pen/WXmwBq*@

<div class="container ">
    @*Main pictures*@
    <div class="mySlides">
        <div class="numbertext">1 / 6</div>
        <a href="https://github.com/TroydonAnabolic/TroydonFitness">
            @*Slide description which shows only when hoevered over main slide images*@
            <div class="image-description invisible">
                Description: An ASP.NET Core personal training website where you can purchase goods and services.
                Services include personal training, exercise and diet prescription. Goods include training equipment and supplements.
                There is an option to create a user account to manage purchased goods and services e.g A purchased exercise routine can be
                saved to the user profile to track and monitor exercises. <br />
                https://github.com/TroydonAnabolic/TroydonFitness
            </div>
        </a>
        <img src="~/images/gym.jpg" style="width:100%">
    </div>

    <div class="mySlides">
        <div class="numbertext">2 / 6</div>
        <a href="https://github.com/TroydonAnabolic/MyCSharpQuizAnswers">

            <div class="image-description invisible">
                Description: A text file with various answers to some basic C# Questions, most of which was my variant, using .NET Core. <br />
                https://github.com/TroydonAnabolic/MyCSharpQuizAnswers
            </div>
        </a>
        <img src="~/images/cSharpQuiz.jpg" style="width:100%">
    </div>

    <div class="mySlides">
        <div class="numbertext">3 / 6</div>
        <a href="https://github.com/TroydonAnabolic/Troydon-Resume-NET-Core">

            <div class="image-description invisible">
                Description: A simple ASP.NET Core website that contains a website resume.<br />
                https://github.com/TroydonAnabolic/Troydon-Resume-NET-Core
            </div>
            <img src="~/images/resume.jpg" style="width:100%">
        </a>
    </div>

    <div class="mySlides">
        <div class="numbertext">4 / 6</div>
        <a href="https://github.com/TroydonAnabolic/InfernalDragons">
            <div class="image-description invisible">
                Description: An RPG Game I am currently working on periodically whilst following a Udemy tutorial.
                Currently using Unity 3D technologies with C# and making my own algorithm variations sometimes.
                https://github.com/TroydonAnabolic/InfernalDragons
            </div>
            <img src="~/images/dragon.jpg" style="width:100%">
        </a>
    </div>

    <div class="mySlides">
        <div class="numbertext">5 / 6</div>
        <a href="https://github.com/TroydonAnabolic/BirdGame">
            <div class="image-description invisible">
                Description: A simple Bird game program that involves flying a bird around. The bird can fly only when it has a certain
                Health point, and travels alot faster. Currently written in Java.
                https://github.com/TroydonAnabolic/BirdGame
            </div>
        </a>
        <img src="~/images/bird.jpg" style="width:100%">
    </div>

    <div class="mySlides">
        <div class="numbertext">6 / 6</div>
        <a href="https://github.com/TroydonAnabolic/BirdGame">
            <div class="image-description invisible">
                Description: A Space Invaders game I followed off a tutorial and made minor adjustments to <br />
                https://github.com/TroydonAnabolic/SpaceInavdersTutorial
            </div>
        </a>
        <img src="~/images/spaceship.jpg" style="width:100%; height:100%;">
    </div>

    <a class="prev" onclick="plusSlides(-1)">❮</a>
    <a class="next" onclick="plusSlides(1)">❯</a>

    @*Slide caption*@
    <div class="caption-container">
        <p id="caption"></p>
    </div>

    @*Preview slides*@
    <div class="row">
        <div class="column">
            <img class="demo cursor" src="~/images/gym.jpg" style="width:100%" onclick="currentSlide(1)" alt="Troydon Fitness">
        </div>
        <div class="column">
            <img class="demo cursor" src="~/images/cSharpQuiz.jpg" style="width:100%" onclick="currentSlide(2)" alt="C# Quizzes">
        </div>
        <div class="column">
            <img class="demo cursor" src="~/images/resume.jpg" style="width:100%" onclick="currentSlide(3)" alt="ASP Resume">
        </div>
        <div class="column">
            <img class="demo cursor" src="~/images/dragon.jpg" style="width:100%" onclick="currentSlide(4)" alt="Infernal Dragons">
        </div>
        <div class="column">
            <img class="demo cursor" src="~/images/bird.jpg" style="width:100%" onclick="currentSlide(5)" alt="Bird Game">
        </div>
        <div class="column">
            <img class="demo cursor" src="~/images/spaceship.jpg" style="width:100%; height:100%" onclick="currentSlide(6)" alt="Space Invaders">
        </div>
    </div>
</div>
